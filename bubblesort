#include<stdio.h>
void
input (int a[], int *n)
{
  int i;
  printf ("enter the size of the array\n");
  scanf ("%d", n);
  printf ("enter the elements of the array\n");

  for (i = 0; i < *n; i++)
    {
      scanf ("%d",&a[i]);
    }
}

void
output (int a[], int n)
{
  int i;
  printf ("the array after sorting is:\n");
  for (i = 0; i < n; i++)
    {
      printf ("%d ", a[i]);
    }
}

void
swap (int a[], int n)
{
  int temp, i, j;

  for (i = 0; i < n; i++)
    {
      for (j = 0; j < n - i; j++)
	{
	  if (a[j] > a[j + 1])
	    {
	      temp = a[j];
	      a[j] = a[j + 1];
	      a[j + 1] = temp;
	    }
	}
}
}

void main ()
{
	int n,a[10];
	input (a, &n);
	swap (a, n);
	output (a, n);
	}

